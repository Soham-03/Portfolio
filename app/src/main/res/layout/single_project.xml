<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/viewpagerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/projectIcon"
        android:layout_width="120dp"
        android:layout_height="112dp"
        android:layout_margin="25dp"
        android:outlineSpotShadowColor="@color/purple_200"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imgProjectIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/github"
            android:cropToPadding="true" />

    </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txtProjectDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/projectIcon"
            android:text="@string/about_me_description"
            android:layout_alignBaseline="@id/projectIcon"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/projectIcon"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/imgFirstSsOfProject"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/instagram_logo"
                    android:layout_margin="2.5dp"/>

                <ImageView
                    android:id="@+id/imgSecondSsOfProject"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2.5dp"
                    android:src="@drawable/github" />

                <ImageView
                    android:id="@+id/imgThirdSsOfProject"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2.5dp"
                    android:src="@drawable/github" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>